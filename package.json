{
  "name": "@koji-koji/test-kanteen",
  "version": "0.7.3",
  "description": "AST×Reporterでテストから観点カタログを自動生成し、LLMと人間の共通Specにするライブラリ",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "kanteen": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build",
    "kanteen": "node dist/cli/index.js",
    "kanteen:analyze": "node dist/cli/index.js analyze",
    "kanteen:analyze:simple": "node dist/cli/index.js analyze --mode simple",
    "kanteen:extract": "node dist/cli/index.js extract",
    "kanteen:self-analyze": "node dist/cli/index.js analyze \"tests/unit/**/*.test.ts\" --output ./self-catalog --format json,markdown",
    "kanteen:self-analyze:simple": "node dist/cli/index.js analyze \"tests/unit/**/*.test.ts\" --output ./self-catalog --format json,markdown --mode simple",
    "kanteen:self-extract": "node dist/cli/index.js extract \"src/**/*.ts\" --output ./self-catalog/exports"
  },
  "keywords": [
    "ast",
    "testing",
    "test-catalog",
    "reporter",
    "estree",
    "llm",
    "specification",
    "test-analysis",
    "coverage",
    "test-gap",
    "typescript",
    "jest"
  ],
  "author": "Koji Koyama",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/koji-koji/test-kanteen.git"
  },
  "bugs": {
    "url": "https://github.com/koji-koji/test-kanteen/issues"
  },
  "homepage": "https://github.com/koji-koji/test-kanteen#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "volta": {
    "node": "20.11.0"
  },
  "dependencies": {
    "@typescript-eslint/parser": "^7.0.0",
    "@typescript-eslint/typescript-estree": "^7.0.0",
    "commander": "^12.0.0",
    "glob": "^10.3.10",
    "uuid": "^9.0.1",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@jest/reporters": "^29.7.0",
    "@playwright/test": "^1.56.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3",
    "vitest": "^2.1.9"
  },
  "peerDependencies": {
    "@jest/reporters": "^29.0.0",
    "@playwright/test": "^1.40.0",
    "vitest": "^1.0.0 || ^2.0.0"
  },
  "peerDependenciesMeta": {
    "@jest/reporters": {
      "optional": true
    },
    "@playwright/test": {
      "optional": true
    },
    "vitest": {
      "optional": true
    }
  }
}
